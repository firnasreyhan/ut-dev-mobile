<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.form.permintaan_mobil_dinas.KonfirmasiPermintaanMobilDinasActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_11sdp"
                android:text="Peminjaman Kendaraan Dinas"/>

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/box_stroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Rincian Pemesan"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/peminjam"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewPeminjam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/pengemudi"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewPengemudi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/tgl_peminjaman"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewTanggalPeminjaman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/tgl_pengembalian"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewTanggalPengembalian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/divisi"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewDivisiDepartement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/no_pol"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewNoPolisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/jam_berangkat"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewJamBerangkat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/jam_pulang"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewJamPulang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Km. Awal"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewKMAwal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Km. Akhir"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewKMAkhir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Catatan"/>

                <TextView
                    android:id="@+id/textViewCatatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/text_color"
                    android:text="-"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/tujuan"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:overScrollMode="never"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Foto SIM"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:strokeColor="@color/box_stroke"
                    app:strokeWidth="@dimen/_1sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewSIM"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Persetujuan"/>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/hint_color2"
                    android:textSize="@dimen/_8sdp"
                    android:gravity="left|top"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:text="Dengan mencentang ini saya menyatakan bahwa data yang saya isikan sudah benar dan dapat dipertanggungjawabkan dan saya akan mematuhi beberapa peraturan berikut:\n\n1. Batas kecepatan tidak melibihi 120 Km/Jam\n2. Mematuhi rambu lalu lintas yang berlaku\n3. Menerapkan safety driving\n4. Dilarang menggunakan kendaraan dengan tidak tertib dan boros bahhan bakar"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonAjukan"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:paddingTop="@dimen/_11sdp"
            android:paddingBottom="@dimen/_11sdp"
            android:text="Ajukan"
            android:textAllCaps="false"
            android:textSize="@dimen/_10sdp"
            android:enabled="false"
            app:backgroundTint="@color/button_disable"
            app:cornerRadius="@dimen/_11sdp" />

    </LinearLayout>

</LinearLayout>