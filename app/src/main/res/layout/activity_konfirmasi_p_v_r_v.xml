<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.form.permohonan_pv_rv.KonfirmasiPVRVActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_11sdp"
                android:text="Permohonan PV/RV"/>

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/box_stroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Detail Informasi"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Kota"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewKota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Tanggal"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Dibayarkan Kepada"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewDibayarkanKepada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="NRP Karyawan"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewNRPKaryawan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Keperluan"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewKeperluan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/no_pol"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewNoPolisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="No PO"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewNoPO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="No Invoice"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewNoInvoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Cara Pembayaran"
                            android:textColor="@color/hint_color2"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/textViewCaraPembayaran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Rincian Pembayaran"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:overScrollMode="never"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:text="Persetujuan"/>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/hint_color2"
                    android:textSize="@dimen/_8sdp"
                    android:gravity="left|top"
                    android:text="Dengan mencentang ini saya menyatakan bahwa data yang saya isikan sudah benar dan dapat dipertanggungjawabkan."/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_13sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginRight="@dimen/_13sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="TOTAL"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Rp 0"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButtonAjukan"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:paddingTop="@dimen/_11sdp"
                android:paddingBottom="@dimen/_11sdp"
                android:text="Ajukan"
                android:textAllCaps="false"
                android:textSize="@dimen/_10sdp"
                android:enabled="false"
                app:backgroundTint="@color/button_disable"
                app:cornerRadius="@dimen/_11sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>