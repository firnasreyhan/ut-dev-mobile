<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_7sdp"
    app:strokeColor="@color/box_stroke"
    app:strokeWidth="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nama Barang"
            android:textColor="@color/hint_color2"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/textViewNamaBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="-"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Jumlah Barang"
            android:textColor="@color/hint_color2"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/textViewJumlahBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="-"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Dipergunakan"
            android:textColor="@color/hint_color2"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/textViewDipergunakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="-"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Keterangan"
            android:textColor="@color/hint_color2"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/textViewKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="-"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>